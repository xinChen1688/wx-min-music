/* pages/detail-songs/index.wxss */
page{
  padding: 0 20rpx;
}
.topConent {
  width: 100vw;
  position: relative;
  margin-left: -20rpx; 
  height: 450rpx;
}
.topConent .imageCover , .bagCover{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: -1;
  left: 0; 
}
.topConent .bagCover{ 
  background: rgba(0, 0, 0, .2);
  backdrop-filter: blur(5px); 
  z-index: -1;
}

/* 内容 */
.conent{
  color: #fff; 
  width: 80vw;
  margin: 0 auto; 
  padding: 50rpx 0 20rpx 0; 
  display: flex;
  flex-direction: column;
  align-items: center; 
}  
.baseurl{
  display: flex;
  align-items: center;
}
.conent .conentImage{ 
  width: 300rpx;
  height: 220rpx;
  display: block; 
}
.nickname{
  flex: 1;
  margin-left: 30rpx;
}
.baseurl .itile{
  font-size: 26rpx; 
  text-indent: .5rem;
}
.nicknameAvor{
