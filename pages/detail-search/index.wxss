/* pages/detail-search/index.wxss */
page{
  padding: 0 20rpx;
  background-color: #fafafa;
  padding-top: 120rpx;
}
.van-search{
  padding: 10px 0 !important;
}
.van-search__content{
  background: #fafafa !important;
} 
.keyword .textConent:nth-child(1){
  color: #f00;
}
.keyword .textConent:nth-child(1)::before{
  content: '~'; 
}

.keyword .textConent{   
  border-radius: 20rpx;
  margin: 10rpx 15rpx;  
  padding: 10rpx 20rpx;
  display: inline-block;
  font-size: 24rpx;
  background-color: #eee;
}

.tiile{
  color: #777;
  font-size: 24rpx;
}

/* 建议搜索 */
.suggest .list{
  display: flex; 
  align-items: center;
  margin: 20rpx 0;  
  font-size: 28rpx;

}
.suggest .inco{
  width: 50rpx;
  height: 50rpx;
}


.listMatching{
  margin: 20rpx 0;
  font-size: 28rpx;
  font-weight: 700;
}

.search{
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
} 