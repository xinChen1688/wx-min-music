/* components/video-item-v1/index.wxss */
 .item{
  width: 100%;
  font-size: 24rpx;
}
 .item image{
  width: 100%;
  border-radius: 15rpx;
}

 .item .album{
 position: relative; 
}

 .item .info{
  color: #fff;
  position: absolute;
  bottom: 18rpx;
  left: 0; 
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 10rpx;
}
.item .info .count::before{
  content: "播放:";  
}
 .item .content{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 35rpx;
}
